build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md

library tictactoe-lib
  exposed-modules:     TicTacToe
                     , TicTacToe.Core
                     , TicTacToe.AI
                     , TicTacToe.Types
                     , TicTacToe.Game
  build-depends:       base >= 4 && < 5
                     , split >= 0.2
  hs-source-dirs:      src
  default-language:    Haskell2010

executable tictactoe
  main-is:             Main.hs
  hs-source-dirs:      app
  build-depends:       base >= 4 && < 5
                     , tictactoe-lib
  default-language:    Haskell2010

test-suite tictactoe-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Test.hs
  build-depends:
      base >= 4 && < 5
    , tasty >= 1.3
    , tasty-hspec
    , tictactoe-lib
